{
  "kind": "collectionType",
  "collectionName": "lessons",
  "info": {
    "singularName": "lesson",
    "pluralName": "lessons",
    "displayName": "Lesson",
    "description": "Individual lessons within modules"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "description": {
      "type": "text"
    },
    "featuredImage": {
      "type": "media",
      "allowedTypes": ["images"],
      "multiple": false
    },
    "video": {
      "type": "media",
      "allowedTypes": ["videos"],
      "multiple": false
    },
    "videoUrl": {
      "type": "string"
    },
    "content": {
      "type": "blocks"
    },
    "sortOrder": {
      "type": "integer",
      "default": 0,
      "required": true
    },
    "duration": {
      "type": "integer",
      "min": 0
    },
    "isPreview": {
      "type": "boolean",
      "default": false
    },
    "isRequired": {
      "type": "boolean",
      "default": true
    },
    "module": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::module.module",
      "inversedBy": "lessons"
    },
    "contentItems": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::content-item.content-item",
      "mappedBy": "lesson"
    },
    "quiz": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::quiz.quiz"
    }
  }
}

