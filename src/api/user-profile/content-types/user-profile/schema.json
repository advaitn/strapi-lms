{
  "kind": "collectionType",
  "collectionName": "user_profiles",
  "info": {
    "singularName": "user-profile",
    "pluralName": "user-profiles",
    "displayName": "User Profile",
    "description": "Extended user profile information"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    },
    "firstName": {
      "type": "string"
    },
    "lastName": {
      "type": "string"
    },
    "displayName": {
      "type": "string"
    },
    "avatar": {
      "type": "media",
      "allowedTypes": ["images"],
      "multiple": false
    },
    "bio": {
      "type": "text"
    },
    "headline": {
      "type": "string",
      "maxLength": 200
    },
    "website": {
      "type": "string"
    },
    "linkedIn": {
      "type": "string"
    },
    "twitter": {
      "type": "string"
    },
    "phone": {
      "type": "string"
    },
    "dateOfBirth": {
      "type": "date"
    },
    "country": {
      "type": "string"
    },
    "city": {
      "type": "string"
    },
    "timezone": {
      "type": "string"
    },
    "language": {
      "type": "string",
      "default": "en"
    },
    "interests": {
      "type": "json"
    },
    "skills": {
      "type": "json"
    },
    "education": {
      "type": "json"
    },
    "experience": {
      "type": "json"
    },
    "preferences": {
      "type": "json"
    },
    "notificationSettings": {
      "type": "json"
    },
    "isInstructor": {
      "type": "boolean",
      "default": false
    },
    "instructorVerified": {
      "type": "boolean",
      "default": false
    },
    "instructorBio": {
      "type": "richtext"
    },
    "totalStudents": {
      "type": "integer",
      "default": 0
    },
    "totalCourses": {
      "type": "integer",
      "default": 0
    },
    "rating": {
      "type": "decimal"
    }
  }
}

